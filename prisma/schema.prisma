// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  directUrl = env("PROD_DB_URL")
  url      = env("PROD_DB_URL_POOLED")
}

model Article {
  id String @id @unique
  slug String @unique
  views Int @default(0)
  content Json
} 

model Links {
  url String @id @unique
  title String?
  description String?
  faviconURL String?
  thumbnailURL String?
}
